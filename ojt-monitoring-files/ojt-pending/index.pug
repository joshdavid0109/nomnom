meta(charset="UTF-8")
meta(name="viewport", content="width=device-width,initial-scale=1")
title Admin
link(rel="stylesheet" type="text/css" href="/ojt-pending/styles.css")
link(rel="stylesheet", href="https://unicons.iconscout.com/release/v4.0.0/css/line.css")
header
  nav.navbar
    .nav-logo SAINT LOUIS UNIVERSITY
    .nav-name  
      p #{adviser.adviserName.split(' ').reverse().join(' ').replace(',', '') }
    form(action='/ojt-dashboard/uploadpp' method='POST' target='_blank')
      .nav-item
          img#profile-image(src='../ojt-images/jannsen.png' alt='Profile')
          input#fileInput(type='file', style='display: none;', accept='image/*', name="prof_image")
main.container
  aside.left-nav
    ol
      li
        a(href="/view/index.html") DASHBOARD
      li
        a(href="/ojt-pending") PENDING
      li
        a(href="#") ABOUT US
    img(src="../", alt)
  section
    .section-holder
      .pending-title Pending Students
      .pending-students-box
        .title-filter-box
          h4 Students
          .view-box
            .view-dropdown-box
              label(for="view-dropdown") View by
              select#dropdown
                option(value="default" data-view="default") Default
                option(value="name" data-view="name") Name
                option(value="company" data-view="company") Company
                option(value="address" data-view="address") Address
            .search-field-box
              input#search-input(type="text", placeholder="Search here...")
              i.uil.uil-search#search-icon
        .overlay#overlay
        .scrollable
          table.students-table
            tbody
              tr.table-header
                th NAME
                th COMPANY
                th ADDRESS
                th STATUS
            each student in pendingStudents
              tr.table-data(data-student-id=student.studentid)  
                td= student.studentName 
                td= student.companyname 
                td= student.companyaddress
                td
                  div.status-box
                    img(src='/ojt-images/check-mark.png' class='status-update' alt='ACCEPTED')
                    img(src='/ojt-images/x-mark.png' class='status-update' alt='REJECTED') 

        //  pop-up container for student requirements 
        .popup-container#popupContainer
          span.close-btn(onclick="closePopup()") Ã—
          .requirements-box
            h2#studentName
            .popup-scrollable
              table
                tbody
                  tr
                    th Requirements
                    th Date Submitted
                    th Remarks
                    th Status
                  tr
                    td
                      .check-name-box
                        input(type="checkbox")
                        h4 Application Letter
                    td 23/11/2023
                    td.editable(contenteditable="true") Add Remarks
                    td
                      .status-box
                        img(src="../../ojt-images/check-mark.png")
                        img(src="../../ojt-images/x-mark.png")
                  tr
                    td
                      .check-name-box
                        input(type="checkbox")
                        h4 Memorandum of Agreement
                    td 23/11/2023
                    td.editable(contenteditable="true") Add Remarks
                    td
                      .status-box
                        img(src="../../ojt-images/check-mark.png")
                        img(src="../../ojt-images/x-mark.png")
                  tr
                    td
                      .check-name-box
                        input(type="checkbox")
                        h4 Curriculum Vitae
                    td 23/11/2023
                    td.editable(contenteditable="true") Add Remarks
                    td
                      .status-box
                        img(src="../../ojt-images/check-mark.png")
                        img(src="../../ojt-images/x-mark.png")
                  tr
                    td
                      .check-name-box
                        input(type="checkbox")
                        h4 Recommendation Letter
                    td 23/11/2023
                    td.editable(contenteditable="true") Add Remarks
                    td
                      .status-box
                        img(src="../../ojt-images/check-mark.png")
                        img(src="../../ojt-images/x-mark.png")
                  tr
                    td
                      .check-name-box
                        input(type="checkbox")
                        h4 Medical Certificate
                    td 23/11/2023
                    td.editable(contenteditable="true") Add Remarks
                    td
                      .status-box
                        img(src="../../ojt-images/check-mark.png")
                        img(src="../../ojt-images/x-mark.png")
                  tr
                    td
                      .check-name-box
                        input(type="checkbox")
                        h4 Dental Certificate
                    td 23/11/2023
                    td.editable(contenteditable="true") Add Remarks
                    td
                      .status-box
                        img(src="../../ojt-images/check-mark.png")
                        img(src="../../ojt-images/x-mark.png")
          .button-box
            .button-holder
              button.cancel-btn Cancel
              button.save-btn Save
      .note NOTE: CLICK ON THE NAME OF THE SELECTED INTERN TO VIEW INTERN REQUIREMENTS
footer
script(src="https://code.jquery.com/jquery-3.6.0.min.js")
